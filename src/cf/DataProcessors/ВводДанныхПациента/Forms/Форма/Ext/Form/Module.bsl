Процедура ПолучитьСхемыЛечения() 
	
	
	МассивДиагнозы = Новый Массив;
	Если ЗначениеЗаполнено(Объект.Диагноз) Тогда 
		МассивДиагнозы.Добавить(Объект.Диагноз);
	Иначе
		
		// симптомы
		Если СписокИспользуемыхСимптомов.Количество() = 0 Тогда
			Сообщение = Новый СообщениеПользователю;
			Сообщение.Текст = "Необходимы данные либо диагноза, либо симптомов!"; 
			Сообщение.Сообщить();
			Возврат;
		КонецЕсли;	              
		
		ЗапросДиагнозы = Новый Запрос;
		ЗапросДиагнозы.Текст = "ВЫБРАТЬ РАЗЛИЧНЫЕ
		|	ДиагнозыСимптомы.Ссылка КАК Ссылка
		|ИЗ
		|	Справочник.Диагнозы.Симптомы КАК ДиагнозыСимптомы
		|ГДЕ
		|	ДиагнозыСимптомы.Симптом В (&СписокСимптомов)";  
		
		ЗапросДиагнозы.УстановитьПараметр("СписокСимптомов", СписокИспользуемыхСимптомов);
		МассивДиагнозы = ЗапросДиагнозы.Выполнить().Выгрузить().ВыгрузитьКолонку("Ссылка"); 
		
	КонецЕсли;
	
	ЗапросОсновной = Новый Запрос;
	ЗапросОсновной.Текст =  "ВЫБРАТЬ
	                        |	РезультатЛечения.СхемаЛечения КАК СхемаЛечения,
	                        |	ВЫБОР
